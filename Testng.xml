			<class name="Automation.testCases.TC_Insider_Page_001" />
			<class name="Automation.testCases.TC_Career_Page_002" />
			<class name="Automation.testCases.TC_QA_Jobs_003" />
			<class name="Automation.testCases.ApiTesting" />


		</classes>

	</test>

</suite>